# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/techguard?schema=public
DATABASE_SHADOW_URL=postgresql://postgres:postgres@localhost:5432/techguard_shadow?schema=public

# NextAuth / Sessions
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe (required for live checkout)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Resend or SMTP from Nodemailer fallback)
RESEND_API_KEY=
EMAIL_FROM=no-reply@yourdomain.com
SMTP_HOST=localhost # set to "mailpit" when using docker compose
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000 # use http://localhost:3001 when running via docker compose

# Tooling
SKIP_ENV_VALIDATION=false
